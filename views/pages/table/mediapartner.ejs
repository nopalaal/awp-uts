<!DOCTYPE html>
<html lang="en">
<head>
  <title>Media Partner Table</title>
  <link rel="stylesheet" href="/src/css/output.css" />
</head>
<body>
  <div class="container mx-auto p-4">
    <h2 class="text-2xl font-bold mb-4">Media Partner Table</h2>
    <a href="/mediapartner/form" class="bg-blue-500 text-white px-4 py-2 rounded mb-4 inline-block">Tambah Media Partner</a>
    <form method="get" action="/mediapartner" class="mb-4">
      <input type="text" name="search" class="border p-2" placeholder="Cari media partner" value="<%= search %>" />
      <button type="submit" class="bg-gray-600 text-white px-2 py-1 ml-1 rounded">Cari</button>
    </form>
    <table class="min-w-full bg-white rounded shadow overflow-x-auto table-auto">
      <thead>
        <tr class="bg-gray-200">
          <th class="py-2 px-4">Nama</th>
          <th class="py-2 px-4">Logo</th>
          <th class="py-2 px-4">Website</th>
          <th class="py-2 px-4">Email Kontak</th>
        </tr>
      </thead>
      <tbody>
        <% if ((mediaPartners||[]).length < 1) { %>
          <tr><td colspan="4" class="py-4 text-center">Tidak ada Media Partner ditemukan.</td></tr>
        <% } else { %>
        <% mediaPartners.forEach(media=>{ %>
          <tr>
            <td class="border py-2 px-4"><%= media.namaMediaPartner %></td>
            <td class="border py-2 px-4"><% if(media.logoUrl){ %>
              <img src="<%= media.logoUrl %>" alt="Logo" width="50" height="50"/>
            <% } else { %>-<% } %></td>
            <td class="border py-2 px-4"><% if(media.websiteUrl){ %><a href="<%= media.websiteUrl %>" target="_blank" class="text-blue-600 underline"><%= media.websiteUrl %></a><% } else { %>-<% } %></td>
            <td class="border py-2 px-4"><%= media.kontakEmail || '-' %></td>
          </tr>
        <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
