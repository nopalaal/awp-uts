<div
  class="overflow-hidden rounded-2xl border border-gray-200 bg-white px-4 pb-3 pt-4 dark:border-gray-800 dark:bg-white/[0.03] sm:px-6"
>
  <div
    class="flex flex-col gap-2 mb-4 sm:flex-row sm:items-center sm:justify-between"
  >
    <div>
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">
        Tasks
      </h3>
    </div>

    <div class="flex items-center gap-3">
      <button
        class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-theme-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 hover:text-gray-800 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-white/[0.03] dark:hover:text-gray-200"
      >
        See all
      </button>
    </div>
  </div>

  <div class="w-full overflow-x-auto">
    <table class="min-w-full">
      <!-- table header start -->
      <thead>
        <tr class="border-gray-100 border-y dark:border-gray-800">
          <th class="py-3">
            <div class="flex items-center">
              <p
                class="font-medium text-gray-500 text-theme-xs dark:text-gray-400"
              >
                Task
              </p>
            </div>
          </th>
          <th class="py-3">
            <div class="flex items-center">
              <p
                class="font-medium text-gray-500 text-theme-xs dark:text-gray-400"
              >
                Person In Charge
              </p>
            </div>
          </th class="py-3">
          <th class="py-3">
            <div class="flex items-center">
              <p
                class="font-medium text-gray-500 text-theme-xs dark:text-gray-400"
              >
                Start
              </p>
            </div>
          </th>
          <th class="py-3">
            <div class="flex items-center">
              <p
                class="font-medium text-gray-500 text-theme-xs dark:text-gray-400"
              >
                Deadline
              </p>
            </div>
          </th>
          <th class="py-3">
            <div class="flex items-center col-span-2">
              <p
                class="font-medium text-gray-500 text-theme-xs dark:text-gray-400"
              >
                Status
              </p>
            </div>
          </th>
        </tr>
      </thead>
      <!-- table header end -->

      
      <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
        <!-- Dynamic Task Rows -->
        <% if (tasks && tasks.length > 0) { %>
          <% tasks.forEach(function(task) { %>
            <tr>
              <!-- Task Column -->
              <td class="py-3">
                <div class="flex items-center">
                  <div>
                    <p class="font-medium text-gray-800 text-theme-sm dark:text-white/90">
                      <%= task.namaTask %>
                    </p>
                    <% if (task.deskripsi) { %>
                      <span class="text-gray-500 text-theme-xs dark:text-gray-400">
                        <%= task.deskripsi.length > 50 ? task.deskripsi.substring(0, 50) + '...' : task.deskripsi %>
                      </span>
                    <% } %>
                  </div>
                </div>
              </td>
              
              <!-- Person In Charge Column -->
              <td class="py-3">
                <div class="flex items-center">
                  <p class="text-gray-500 text-theme-sm dark:text-gray-400">
                    <% if (task.idEmployee) { %>
                      Employee ID: <%= task.idEmployee %>
                    <% } else if (task.idAdmin) { %>
                      Admin ID: <%= task.idAdmin %>
                    <% } else { %>
                      Unassigned
                    <% } %>
                  </p>
                </div>
              </td>
              
              <!-- Start Date Column -->
              <td class="py-3">
                <div class="flex items-center">
                  <p class="text-gray-500 text-theme-sm dark:text-gray-400">
                    <%= task.tanggalMulai ? new Date(task.tanggalMulai).toLocaleDateString('id-ID') : '-' %>
                  </p>
                </div>
              </td>
              
              <!-- Deadline Column -->
              <td class="py-3">
                <div class="flex items-center">
                  <p class="text-gray-500 text-theme-sm dark:text-gray-400">
                    <%= task.tanggalAkhir ? new Date(task.tanggalAkhir).toLocaleDateString('id-ID') : '-' %>
                  </p>
                </div>
              </td>
              
              <!-- Status Column -->
              <td class="py-3">
                <div class="flex items-center">
                  <% 
                    let statusClass = '';
                    switch(task.status) {
                      case 'Selesai':
                        statusClass = 'bg-success-50 text-success-600 dark:bg-success-500/15 dark:text-success-500';
                        break;
                      case 'In Progress':
                        statusClass = 'bg-blue-50 text-blue-600 dark:bg-blue-500/15 dark:text-blue-500';
                        break;
                      case 'Pending':
                        statusClass = 'bg-warning-50 text-warning-600 dark:bg-warning-500/15 dark:text-orange-400';
                        break;
                      case 'Revisi':
                        statusClass = 'bg-error-50 text-error-600 dark:bg-error-500/15 dark:text-error-500';
                        break;
                      default:
                        statusClass = 'bg-gray-50 text-gray-600 dark:bg-gray-500/15 dark:text-gray-500';
                    }
                  %>
                  <p class="rounded-full <%= statusClass %> px-2 py-0.5 text-theme-xs font-medium">
                    <%= task.status %>
                  </p>
                </div>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="5" class="py-6 text-center">
              <p class="text-gray-500 text-theme-sm dark:text-gray-400">
                No tasks available
              </p>
            </td>
          </tr>
        <% } %>
        <!-- table body end -->
      </tbody>
    </table>
  </div>
</div>
