<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title></title>
</head>
<body>
  <table border="1">
    <thead>

      <tr>
        <th>id</th>
        <th>username</th>
        <th>name</th>
        <th>tanggal lahir</th>
        <th>email</th>
        <th>domisili</th>
        <th>gender</th>
        <th>photo profile</th>
        <th>role</th>
      </tr>
    </thead>
    <tr>
      <tbody>
        <% users.forEach(user => { %>
          <tr>  
            <td><%= user.idUser %></td>
            <td><%= user.username %></td>
            <td><%= user.nama %></td>
            <td><%= user.tanggalLahir %></td>
            <td><%= user.email %></td>
            <td><%= user.domisili %></td>
            <td><%= user.gender %></td>
            <td><%= user.photo_profile %></td>
            <td><%= user.role %></td>
          </tr>
          <% }) %>

          <form action="/create" method="POST">
  <h2>Tambah Data Pengguna</h2>
  <label for="username">Username:</label>
  <input type="text" id="username" name="username" required>
  <br>
  <label for="password">Password:</label>
  <input type="text" id="password" name="password" required>
  <br>
  <label for="nama">Nama:</label>
  <input type="text" id="nama" name="nama" required>
  <br>
  <label for="tanggalLahir">Tanggal Lahir:</label>
  <input type="date" id="tanggalLahir" name="tanggalLahir" required>
  <br>
  <label for="email">Email:</label>
  <input type="email" id="email" name="email" required>
  <br>
  <label for="domisili">Domisili:</label>
  <input type="text" id="domisili" name="domisili" required>
  <br>
  <label for="gender">Gender:</label>
  <select id="gender" name="gender" required>
    <option value="Pria">Pria</option>
    <option value="Wanita">Wanita</option>
    <option value="Lainnya">Lainnya</option>
  </select>
  <br>
  <label for="photo_profile">Photo Profile:</label>
  <input type="text" id="photo_profile" name="photo_profile" required>
  <br>
  <input type="hidden" id="role" name="role" value="user">
  <br>
  <button type="submit">Tambah</button>
</form>
      </tbody>
      </tr>
    </table>
</body>
</html>